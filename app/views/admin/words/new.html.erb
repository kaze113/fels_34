<% if logged_in? %>
    <% provide(:title, "New Word") %>
    <h1>Create a new word</h1>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for [:admin, @word] do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div >
            <h3>Category: <%= @category.title %></h3>
            <%= f.hidden_field :category_id, value: @category.id %>
            <%= f.label :word %>
            <%= f.text_field :content, placeholder: "New word..." %>
            <%= f.label :answer %>
            <%= f.fields_for :definitions do |builder| %>
            <div>
              <%= builder.text_field :word_def, placeholder: "Definition..." %> 
              <%= builder.label :value, class: "checkbox-inline" do %>
                <%= builder.check_box :value %>
                <span>Correct answer</span>
              <% end %>
            </div>
            <% end %>
          </div>
          <%= f.submit "Create", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
<% end %>