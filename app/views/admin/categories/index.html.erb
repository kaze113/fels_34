<% if logged_in? %>
  <% provide(:title, 'All categories') %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= button_to "Add new category", new_admin_category_path, :method => "get", class: "btn btn-default " %><br/>
      </section>   
    </aside>
    <div class="col-md-8">
      <h3>All categories</h3>
      <ul class="categoriesindex">
        <% @categories.each do |category| %>
          <%= render category %>
        <% end %>
      </ul>
      <%= will_paginate %>
    </div>
  </div>
<% end %>